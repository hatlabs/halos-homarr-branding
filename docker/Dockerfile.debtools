FROM debian:trixie

# Install Debian packaging tools and build dependencies
RUN apt-get update && apt-get install -y \
    debhelper \
    build-essential \
    fakeroot \
    devscripts \
    lintian \
    python3 \
    python3-bcrypt \
    && rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /workspace

# Default command
CMD ["/bin/bash"]
